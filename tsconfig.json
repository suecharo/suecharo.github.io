{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "allowJs": true,
    "sourceMap": true,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./@nuxt/types",
      "./src/types",
      "./node_modules/vuetify/types"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
